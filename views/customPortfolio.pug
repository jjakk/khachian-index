head
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="/css/index.css")
    link(rel="stylesheet" href="/css/customPortfolio.css")
body
    header
        h1 Rank your portfolio positions using the Khachian Index
    main
        if !scores
            form(action="/customPortfolio", method="post")
                textarea(type="text", name="symbols", placeholder="Enter symbols separated by commas")
                br
                br
                input(type="submit", value="Submit")
        else
            table
                tr
                    th Symbol
                    th KI Score
                each score in scores 
                    tr
                        td #{score.symbol}
                        td #{score.score}
            br
            a(href="/customPortfolio") Input again
            br
            br
        a(href="/") Back to home page
        


