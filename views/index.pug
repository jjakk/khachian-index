head
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="https://jak.bz/Basic-CSS/basic.css")
    link(rel="stylesheet" href="/css/index.css")
body
    header
        h1 The Khachian Index Trading Bot
    main
        h3 Top 10 Holdings
        table
            tr
                th Symbol
                th Percent of Total Holdings
            for holding in topTenHoldings
                tr
                    td
                        a(href=`https://finance.yahoo.com/quote/${holding.symbol}` target="_blank") #{holding.symbol}
                    td #{holding.portfolioDiversity}%
        br
        button(onclick="openHoldings()") Show all holdings
        p Total Portfolio Appreciation: #{totalAppreciationPercentage}%
        a(href="customPortfolio") Check out how your portfolio positions rank
        br
        br
        a(href="about") Learn how this index is calculated
        div#overlay
            div#overlay-box
                table
                    tr
                        th Symbol
                        th Percent of Total Holdings
                    for holding in allHoldings
                        tr
                            td
                                a(href=`https://finance.yahoo.com/quote/${holding.symbol}` target="_blank") #{holding.symbol}
                            td #{holding.portfolioDiversity}%
                br
                button(onclick="closeHoldings()") Close
    footer 
        script(src="./js/index.js")
        


